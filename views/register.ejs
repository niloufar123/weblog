<form class="form-signin" action="/users/register" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">Please Register</h1>
    <%- include('./includes/messages') -%>

    <label for="name" class="sr-only">Name LastName</label>
    <input
      id="name"
      name="fullname"
      class="form-control mb-2"
      placeholder="Full name"
      type="text"

      required
      autofocus
    />
    <label for="email" class="sr-only">Email address</label>
    <input
      type="email"
      name="email"
      id="email"
      class="form-control"
      placeholder="Email address"
      autocomplete="false"
      required
      autofocus
    />
    <label for="password" class="sr-only">Password</label>
    <input
      type="password"
      id="password"
      class="form-control"
      placeholder="Password"
      required
      name="password"
    />
    <label for="confirmPassword" class="sr-only">Repeat Password</label>
    <input
      type="password"
      id="confirmPassword"
      name="confirmPassword"
      class="form-control mb-2"
      placeholder="Repeat Password"
      required
    />
    <div class="checkbox mb-3">
      <label> <a href="/users/login"> I have Account</a> </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">
      Sign in
    </button>
  </form>
  
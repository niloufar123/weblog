<h3 class="mt-2 text-center">Edit post</h3>
<div class="w-50 m-auto"><%- include("../includes/messages.ejs") %></div>
<form action="/dashboard/edit-post/<%= post._id %>" class="" method="POST" enctype="multipart/form-data">

  <div class="input-group mb-3">
    <div class="input-group custom-file-button">
      <label for="selectedThumbnail" >thumbNail</label>
      <label class="input-group-text" for="selectedThumbnail" id="">chose your thumbNail file</label>
      <input type="file" class="form-control" id="selectedThumbnail" name="thumbnail" />
      <p id="imageStatus"></p>
    </div>
  </div>



  <div class="form-group my-3">
    <label for="title" class="mb-1">Title</label>
    <input type="text" class="form-control w-50" name="title" id="title" value="<%= post.title %>" />
  </div>

  <div class="form-group my-3">
    <label for="status" class="mb-1">Status</label>
    <select id="inputState" class="form-control" name="status">
      <option value="<%= post.status %>" selected=""><%= post.status %></option>
      <option value="<%= post.status== "public" ? "private" : "public" %>">
        <%= post.status== "public" ? "private" : "public" %>
      </option>
    </select>
  </div>
  <div class="input-group mb-3">
    <div class="input-group custom-file-button">
      <label id="imageUpload" class="input-group-text me-2">Upload</label>
      <label class="input-group-text" for="selectedImage" id=""
        >chose your file</label
      >
      <input type="file" class="form-control" id="selectedImage" />
      <p id="imageStatus"></p>
    </div>
  </div>
  <div id="progressDev" style="display: none;">
    <div class="progress">
      <div class="progress-bar progress-bar-striped progress-bar-animated "
       role="progressbar" 
       id="progressBar"
      style="width: 100%" aria-valuenow="100" 
      aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>


  <div class="w-100 bg-light text-center">
    <p id="uploadResult" class="overflow-auto">
        uploaded image address

    </p>
</div>
  <div class="form-group my-3">
    <h5>body</h5>
    <textarea  name="body" class="form-control" id="body"><%= post.body %></textarea>
</div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <input type="submit" value="edit post" class="btn btn-success m-2" />
    </div>
    <div class="form-group col-md-6">
      <a href="/dashboard" class="btn btn-warning m-2">cancle</a>
    </div>
  </div>
</form>

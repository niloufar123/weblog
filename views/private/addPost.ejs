<h3 class="mt-2 text-center">create new post</h3>
<div class="w-50 m-auto"><%- include("../includes/messages.ejs") %></div>
<form action="/dashboard/add-post" class="" method="POST">
  <div class="form-group my-3">
    <label for="title" class="mb-1">Title</label>
    <input type="text" class="form-control w-50" name="title" id="title" />
  </div>

  <div class="form-group my-3">
    <label for="status" class="mb-1">Status</label>
    <select id="inputState" class="form-control" name="state">
      <option selected="">public</option>
      <option>private</option>
    </select>
  </div>
  <div class="input-group mb-3">
    <div class="input-group custom-file-button">
      <label id="imageUpload" class="input-group-text me-2">Upload</label>
      <label class="input-group-text" for="selectedImage" id=""
        >chose your file</label
      >
      <input type="file" class="form-control" id="selectedImage" />
      <p id="imageStatus"></p>
    </div>
  </div>



  <div class="form-group my-3">
    <h5>body</h5>
    <textarea name="body" class="form-control" id="body"></textarea>
</div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <input type="submit" value="create post" class="btn btn-success m-2" />
    </div>
    <div class="form-group col-md-6">
      <a href="/dashboard" class="btn btn-warning m-2">cancle</a>
    </div>
  </div>
</form>
